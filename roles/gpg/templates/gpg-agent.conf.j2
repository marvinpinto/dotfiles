# PIN entry program
pinentry-program /usr/local/bin/custom-pinentry

# Cache settings
default-cache-ttl 600
default-cache-ttl-ssh 600
max-cache-ttl 7200
max-cache-ttl-ssh 7200

# Environment file
write-env-file {{ home_directory }}/.gnupg/gpg-agent-info

# GPG support for SSH Agent
enable-ssh-support
use-standard-socket
