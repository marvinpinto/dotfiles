# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font is
# used in the bar {} block below.
font pango:Terminus 7

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec gnome-terminal

# kill focused window
bindsym $mod+Shift+q kill

# rofi launcher
bindsym $mod+d exec "rofi -switchers 'workspaces:rofi-switch-workspaces,launcher:rofi-launcher,run,calc:rofi-calc' -show launcher"

# link handler
bindsym $mod+p exec "rofi-url-handler"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# change focus to the other monitor
bindsym $mod+o focus output left

# split in horizontal orientation
bindsym $mod+quotedbl split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus on the parent container
bindsym $mod+a focus parent

# focus on the child container
bindsym $mod+Shift+a focus child

# Workspaces mapped to the primary monitor
workspace "misc" output DVI-I-1

# Workspaces mapped to the secondary monitor
workspace "other" output DP-0

# switch to the previously used workspace
bindsym $mod+b workspace back_and_forth

# Volume controls for the Dell T1700
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.i3/pavolume.sh --up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.i3/pavolume.sh --down
bindsym XF86AudioMute exec --no-startup-id ~/.i3/pavolume.sh --togmute

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"
focus_follows_mouse yes

# Rename the current workspace
bindsym $mod+t exec --no-startup-id ~/.i3/rename_workspace.sh

# Shortcut to lock the screen
bindsym $mod+Control+l exec --no-startup-id /usr/local/bin/rofi-i3-locker

# Startup programs
exec --no-startup-id compton -CGb
exec_always --no-startup-id hsetroot -solid "#00001A"
exec_always --no-startup-id /usr/bin/xautolock -resetsaver -detectsleep -time 3 -locker '/usr/local/bin/rofi-i3-locker' -notify 30 -notifier "notify-send -i info -u normal -t 3000 -- 'Locking screen in 30 seconds'"
exec_always --no-startup-id /usr/bin/xmodmap ~/.xmodmap
exec_always --no-startup-id /usr/bin/xrdb -load ~/.xresources
exec_always --no-startup-id /usr/bin/gnome-settings-daemon &
exec_always --no-startup-id /usr/bin/xset r rate 250 50
exec_always --no-startup-id ~/.i3/gpg-agent.sh
exec_always --no-startup-id ~/.i3/fastmail_unread_count.py &
exec_always --no-startup-id xrandr --output DP-0 --primary --right-of DVI-I-1
exec_always --no-startup-id ~/.i3/startup-app.sh "blueman-applet" "blueman-applet"
exec_always --no-startup-id ~/.i3/startup-app.sh "autocutsel -fork"
exec_always --no-startup-id ~/.i3/startup-app.sh "autocutsel -selection PRIMARY -fork"

# Ensure that the keybase window always stays in floating mode
exec_always --no-startup-id /usr/bin/run_keybase
for_window [class="Keybase"] floating enable, border normal, move to scratchpad
bindsym $mod+c [class="Keybase"] scratchpad show

# Ensure that the slack window always stays in floating mode
exec_always --no-startup-id ~/.i3/startup-app.sh "slack" "slack"
for_window [class="Slack"] floating enable, border normal, move to scratchpad

# Ensure that the irssi window always stays in floating mode
exec_always --no-startup-id gnome-terminal --geometry "110x35" -e "bash -l -c 'title irssi; im'"
for_window [class="Gnome-terminal" title="irssi"] floating enable, border normal, move to scratchpad

# Start a bunch of floating throwaway terminals, as needed
bindsym $mod+n exec --no-startup-id "gnome-terminal --geometry '110x35' -e \\"bash -l -c 'title throwaway; bash'\\""
for_window [class="Gnome-terminal" title="throwaway"] floating enable, border normal

# Scratchpad shortcuts
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Ensure that the following windows always start in floating mode
for_window [class="Pavucontrol"] floating enable, border normal
for_window [class="Blueman-manager"] floating enable, border normal, resize set 640 480

# Use mod-Control-Left and Right to rotate through the workspace list.
bindsym $mod+Control+Left workspace prev_on_output
bindsym $mod+Control+Right workspace next_on_output

# Use mod-Shift-Control-Left and Right to move the selected window to an
# adjacent workspace. (This does *not* change your view to that workspace,
# it just "zaps" the window there.)
bindsym $mod+Shift+Control+Left move workspace prev_on_output
bindsym $mod+Shift+Control+Right move workspace next_on_output

# Do not allow any windows to steal focus or try and grab my attention
focus_on_window_activation none
force_display_urgency_hint 0

# Show i3 vim-style window marks
show_marks yes

# read 1 character and mark the current window with this character
bindsym $mod+m exec i3-input -F 'mark --toggle %s' -l 1 -P 'Mark: '

# read 1 character and go to the window with the character
bindsym $mod+g exec i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Goto: '

# color defines for zenburn styled i3
set $bg     #2c2c2e
set $fg     #9f9f9f
set $hi     #efef8f
set $ac     #a0afa0
set $tx     #040404
set $ia     #8f8f8f
set $be     #8faf9f
set $yw     #ccdc90
set $gn     #88b090
set $rd     #e89393

# set some nice colors      border     background  text
client.focused              $ac        $ac         $tx
client.unfocused            $bg        $bg         $ia
client.focused_inactive     $bg        $bg         $ac
client.urgent               $bg        $bg         $ia

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status -c ~/.i3/i3status.conf | ~/.i3/wrapper.py
    font pango:FontAwesome 8, pango:Terminus 8

     colors {
         background          $bg
         statusline          $fg
         separator           $hi
         focused_workspace   $gn        $bg        $ac
         active_workspace    $bg        $bg        $ia
         inactive_workspace  $bg        $bg        $ia
         urgent_workspace    $bg        $bg        $ia
         binding_mode        $rd        $bg        $ac
     }
}
